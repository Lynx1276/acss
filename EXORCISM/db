
CREATE TABLE `faculty` (
  `id` int(11) NOT NULL,
  `name` varchar(100) DEFAULT NULL,
  `department` varchar(100) DEFAULT NULL,
  `employment_status` enum('REGULAR','COS') DEFAULT NULL,
  `vsl` enum('YES','NO') DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

CREATE TABLE `subject` (
  `id` int(11) NOT NULL,
  `curriculum_id` int(11) DEFAULT NULL,
  `semester` enum('1st Semester','2nd Semester','3rd Trimester') DEFAULT NULL,
  `subject_code` varchar(10) DEFAULT NULL,
  `subject_name` varchar(100) DEFAULT NULL,
  `rm_unit` int(11) DEFAULT NULL,
  `lab_unit` int(11) DEFAULT NULL,
  `hours` int(11) DEFAULT NULL,
  `total_hours` int(11) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

CREATE TABLE `curriculum` (
  `id` int(11) NOT NULL,
  `year` int(11) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

